<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:orientation="vertical">

    <android.support.design.card.MaterialCardView
        android:id="@+id/matCardView"

        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="376dp"

        android:layout_height="150dp"
        app:cardBackgroundColor="#344955"
        android:layout_marginLeft="@dimen/mtrl_card_spacing"
        android:layout_marginTop="@dimen/mtrl_card_spacing"
        android:layout_marginRight="@dimen/mtrl_card_spacing"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:textColor="#F9AA33"
                android:text="TextView"
                android:textStyle="bold"

                android:textSize="20dp" />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subject"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Minimum Attendence"
                android:textColor="#F9AA33"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:layout_marginStart="10dp"
                android:layout_marginTop="18dp"
                android:text="Attendance"
                android:textStyle="bold"
                android:textColor="#F9AA33"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/minAtten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/subject"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/textView4"
                android:text="75"
                android:textColor="#ffffff"
                android:textSize="25sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:layout_marginTop="5dp"
                android:layout_below="@id/subject"
                android:textSize="25sp"
                android:layout_marginLeft="5dp"
                android:textColor="#F9AA33"
                android:layout_toRightOf="@+id/minAtten"
                />

            <TextView
                android:id="@+id/pres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/textView6"
                android:text="78"
                android:textColor="#ffffff"
                android:textSize="30sp" />


            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/pres"
                android:text="/"
                android:textColor="#F9AA33"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/textView11"
                android:textColor="#ffffff"

                android:text="99"
                android:textSize="30dp" />

            <ImageButton
                android:id="@+id/presAtt"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="35dp"
                android:src="@drawable/ic_check_black_24dp"
                android:theme="@style/plus"


                />


            <ImageButton
                android:id="@+id/absAtt"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@id/presAtt"
                android:layout_alignParentRight="true"
                android:layout_marginRight="35dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_close_black_24dp"
                android:elevation="40dp"
                android:theme="@style/minus"

                />

        </RelativeLayout>

    </android.support.design.card.MaterialCardView>














</RelativeLayout>